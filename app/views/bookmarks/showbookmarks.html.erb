<h2>Bookmarked books</h2>

<table>
<thead>
   <tr>
     <th>Isbn</th>
     <th>Title</th>
     <th>Language</th>
     <th>Published</th>
     <th>Edition</th>
     <th>Subject</th>
     <th>Summary</th>
     <th colspan="3"></th>
   </tr>
 </thead>
  <tbody>
   <% @bookmarked_books.each do |books| %>
   <% books.each do |book| %>
     <tr>
       <td><%= book.isbn %></td>
       <td><%= book.title %></td>
       <td><%= book.language %></td>
       <td><%= book.published %></td>
       <td><%= book.edition %></td>
       <td><%= book.subject %></td>
       <td><%= book.summary %></td>
       <td><%= link_to 'Show', book %></td>
     </tr>
   <% end %>
   <% end %>
 </tbody>
</table>