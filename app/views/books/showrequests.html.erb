<h2>Books on Hold</h2>

<table>
  <thead>
  <tr>
    <th>Isbn</th>
    <th>Title</th>
    <th>Language</th>
    <th>Published</th>
    <th>Edition</th>
    <th>Subject</th>
    <th>Summary</th>
    <th>Hold position</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @requested_books.each do |books| %>
    <% books.each do |book| %>
      <tr>
        <td><%= book.isbn %></td>
        <td><%= book.title %></td>
        <td><%= book.language %></td>
        <td><%= book.published %></td>
        <td><%= book.edition %></td>
        <td><%= book.subject %></td>
        <td><%= book.summary %></td>
        <% @requests.each do |request| %>
            <% if request.book_id == book.id %>
             <td> <%= request.queuenumber %> </td>
             <td><%= link_to 'Delete', deleterequest_path(:request_id => request.id) %></td>
            <% end %>
        <% end %>
        <td><%= link_to 'Show', book %></td>

      </tr>
    <% end %>

  <% end %>
  </tbody>
</table>