<h3>Borrow History for <%=Book.where(id:@bookborrowhistory[0].book_id)[0].title %></h3>
<table>
  <thead>
  <tr>
    <th colspan="5">Student Name</th>
    <th colspan="5">Issue Date</th>
    <th colspan="5">Return Date</th>
    <th colspan="5">Overdue Date</th>
  </tr>
  </thead>
  <tbody>
  <% @bookborrowhistory.each do |h| %>
    
      <tr>
        <td colspan="5"> <%= Student.find(h.student_id).name %> </td>
        <td colspan="5"> <%= h.issue_date %> </td>
        <td colspan="5"> <%= h.return_date %> </td>
        <td colspan="5"> <%= h.overdue_date %> </td>
      </tr>

    
  <% end %>
  </tbody>
</table>
<%=link_to "Back", books_path %>